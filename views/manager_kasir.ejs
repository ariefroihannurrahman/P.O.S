<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kelola Kasir</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
</head>

<body>
    <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAdd">Tambah Kasir</button>
    <table class="table table-striped" id="tabelKasir">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nama Kasir</th>
                <th>No Hp</th>
                <th>Alamat</th>
                <th>Kode Kasir</th>
                <th>Tindakan</th>
            </tr>
        </thead>
        <tbody>
            <% listKasir.forEach((item)=>{ %>
                <tr>
                    <td><%= item.id %></td>
                    <td><%= item.nama_kasir %></td>
                    <td><%= item.no_hp %></td>
                    <td><%= item.alamat %></td>
                    <td><%= item.kode_kasir %></td>
                    <td>
                        <a href="javascript:void(0);" class="btn btn-sm btn-info editKasir" data-id="<%= item.id %>"    data-nama-kasir="<%= item.nama_kasir %>" data-no-hp="<%= item.no_hp %>" data-alamat-kasir="<%= item.alamat %>" data-kode-kasir="<%= item.kode_kasir %>">Edit</a>
                        <a href="javascript:void(0);" class="btn btn-sm btn-danger deleteKasir"data-id="<%= item.id %>">Delete</a>
                    </td>
                </tr>
            <%}) %>
        </tbody>
    </table>

    <form action="/add-kasir" method="post">
        <div class="modal fade" id="modalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Tambah Kasir</h4>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="text" name="nama_kasir" class="form-control" placeholder="Nama Kasir" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="no_hp" class="form-control" placeholder="Nomor HP" required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control" name="alamat_kasir" placeholder="Alamat Kasir"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" name="kode_kasir" class="form-control" placeholder="Kode Kasir" required>
                        </div>

                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Simpan</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <form action="/update-kasir" method="post">
        <div class="modal fade" id="modalEdit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Edit Kasir</h4>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="text" name="nama_kasir" class="form-control nama" placeholder="Nama Kasir" required>
                        </div>
                        <div class="form-group">
                            <input type="text" name="no_hp" class="form-control nohp" placeholder="Nomor HP" required>
                        </div>
                        <div class="form-group">
                            <textarea class="form-control alamat" name="alamat_kasir" placeholder="Alamat Kasir"></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" name="kode_kasir" class="form-control kode" placeholder="Kode Kasir" required>
                        </div>

                        <div class="modal-footer">
                            <input type="hidden" name="id" class="idkasir">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Simpan</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <form action="/delete-kasir" method="post">
        <div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Hapus Kasir</h4>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <strong>Yakin Menghapus Data Ini?</strong>
                    </div>
                    <div class="modal-footer">
                        <input type="hidden" name="id" class="form-control idkasir2" required>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <script src="/js/jquery.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script>
        $(document).ready(function(){
            $('#tabelKasir').on('click','.editKasir',function(){
                var id = $(this).data('id');
                var nama_kasir = $(this).data('nama-kasir');
                var no_hp = $(this).data('no-hp');
                var alamat_kasir = $(this).data('alamat-kasir');
                var kode_kasir = $(this).data('kode-kasir');

                $('#modalEdit').modal('show');

                $('.idkasir').val(id);
                $('.nama').val(nama_kasir);
                $('.nohp').val(no_hp);
                $('.alamat').val(alamat_kasir);
                $('.kode').val(kode_kasir);
            });

            $('#tabelKasir').on('click','.deleteKasir',function(){
                var id = $(this).data('id');
                $('#modalDelete').modal('show');
                $('.idkasir2').val(id);
            });
        });
    </script>
</body>

</html>

